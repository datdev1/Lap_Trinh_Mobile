<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PocketCocktail" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/secondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:titleTextColor">@color/text_on_primary</item>


        <item name="actionButtonStyle">@style/MyActionButtonStyle</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
        <item name="actionBarDivider">@style/MyDividerStyle</item>
    </style>

    <style name="Theme.PocketCocktail" parent="Base.Theme.PocketCocktail" />

    <style name="MyActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">30dp</item>
        <item name="android:maxWidth">36dp</item>
        <item name="android:width">36dp</item>
        <item name="android:tint">@color/text_on_secondary</item>
        <item name="marginHorizontal">4dp</item>
    </style>

    <style name="MyDividerStyle" parent="Widget.Material3.MaterialDivider">

        <item name="android:color">@color/black</item>
        <item name="android:thickness">1dp</item>
    </style>

</resources>