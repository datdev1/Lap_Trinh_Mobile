<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for day mode -->
    <style name="Theme.MintPink" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Font family -->
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_main</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/background_main</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        <item name="android:textColorLink">@color/text_link</item>
        
        <!-- Error & State colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_on_primary</item>
        
        <!-- Ripple effects -->
        <item name="colorControlHighlight">@color/ripple_dark</item>
        
        <!-- Other Material attributes -->
        <item name="materialCardViewStyle">@style/Widget.MintPink.CardView</item>
        <item name="buttonStyle">@style/Widget.MintPink.Button</item>
        <item name="toolbarStyle">@style/Widget.MintPink.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.MintPink.BottomNavigation</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MintPink.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MintPink.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MintPink.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MintPink.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MintPink.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MintPink.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MintPink.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MintPink.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MintPink.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MintPink.Overline</item>
    </style>
    
    <!-- Component styles -->
    <style name="Widget.MintPink.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
    
    <style name="Widget.MintPink.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/button_text_light</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="Widget.MintPink.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/button_secondary</item>
        <item name="android:textColor">@color/button_secondary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.MintPink.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
    </style>
    
    <style name="Widget.MintPink.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/toolbar</item>
        <item name="titleTextColor">@color/toolbar_text</item>
        <item name="subtitleTextColor">@color/toolbar_text</item>
        <item name="colorControlNormal">@color/toolbar_text</item>
    </style>
    
    <style name="Widget.MintPink.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/background_main</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
    </style>
    
    <style name="TextAppearance.MintPink.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    
    <style name="TextAppearance.MintPink.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    
    <style name="TextAppearance.MintPink.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    
    <style name="TextAppearance.MintPink.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    
    <style name="TextAppearance.MintPink.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    
    <style name="TextAppearance.MintPink.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    
    <style name="TextAppearance.MintPink.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    
    <style name="TextAppearance.MintPink.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>
    
    <style name="TextAppearance.MintPink.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>
    
    <style name="TextAppearance.MintPink.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="fontFamily">@font/poppins_thin</item>
    </style>
</resources>