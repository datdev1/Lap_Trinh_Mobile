<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseString">
        <item name="fontFamily">@font/kanit</item>
    </style>

    <style name="NormalString" parent="BaseString">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTitle" parent="BaseString">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="AppSecondaryTitle" parent="BaseString">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="AppLogo">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">100sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sakitu_baelah_clean</item>
        <item name="android:textStyle">italic</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="homeTitle" parent="BaseString">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FragmentSectionTitle" parent="BaseString">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="homeContent" parent="BaseString">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="HomeItemName" parent="BaseString">\
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ItemTitle" parent="BaseString">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IngredientText" parent="BaseString">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IngredientDisableText" parent="BaseString">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>



    <style name="ItemContent" parent="BaseString">
        <item name="android:textColor">@color/button_text_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EditTextLabel" parent="BaseString">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="DetailDrinkTitle" parent="BaseString">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
<!--            -->
<!--        Shape-->
<!--                -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <!--            -->
    <!--        Button-->
    <!--                -->
    <style name="BaseButton" parent="BaseString">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonOutlinePastel" parent="BaseButton">
        <item name="android:background">@drawable/bg_btn_outline_pink_pastel</item>
        <item name="android:textColor">@color/text_on_secondary</item>
    </style>

    <style name="ButtonPastel" parent="BaseButton">
        <item name="android:background">@drawable/bg_btn_login</item>
        <item name="android:textColor">@color/text_on_secondary</item>
    </style>

    <style name="PinkPillButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_btn_see_all</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">8dp</item>
    </style>



</resources>